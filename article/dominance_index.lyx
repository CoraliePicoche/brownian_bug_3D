 & = & \frac{1}{\sigma\sqrt{\pi}}\frac{r^{2}}{2\sigma^{2}}e^{-\frac{r^{2}}{2\sigma^{2}}\frac{1}{2}}\\
 & = & \frac{2}{\sigma\sqrt{\pi}}\left(\frac{r}{2\sigma}\right)^{2}e^{-(r/2\sigma)^{2}}
\end{array}
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
This is the same as eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:deriv_K_3D"
plural "false"
caps "false"
noprefix "false"

\end_inset

, which we use to obtain the same equation as eq.
 
\begin_inset CommandInset ref
LatexCommand ref
reference "eq:3D_Thomas"
plural "false"
caps "false"
noprefix "false"

\end_inset

.
\end_layout

\begin_layout Standard
\begin_inset Formula 
\begin{equation}
K(r)=\frac{4}{3}\pi r^{3}+\frac{2}{\lambda_{p}\sigma\sqrt{\pi}}\left(erf\left(\frac{r}{2\sigma}\right)-\frac{r}{\sigma\sqrt{\pi}}e^{-\left(\frac{r}{2\sigma}\right)^{2}}\right)
\end{equation}

\end_inset


\end_layout

\begin_layout Standard
\begin_inset Note Note
